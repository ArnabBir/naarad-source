<html>

    <!-- START INCLUDING CSS -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/animate.min.css" rel="stylesheet">
    <link href="css/mdb.css" rel="stylesheet">
    <link href="css/custom.css" rel="stylesheet">
    <!-- END INCLUDING CSS -->

    <link rel="shortcut icon" href="favicon.ico?v=1" />
    <title> KGP Trends - Naarad | Metakgp </title>

    <body>
      <div class="container">
        <div class="col-sm-12">
          <div class="divider-new">NAARAD <span style="margin-top: 20px; font-size: 10px;"> by Metakgp </span></div>
          <div class="query-div">
            <div class="left-pull col-md-8 col-sm-12">
              <p style="text-align: center; font-size: 16px; padding: 5px;"> Naarad is a aggregator of popular KGP-ian facebook groups. All KGP notfications, at one place. </p>  
            </div>
            <div class="right-pull col-md-4 col-sm-12">          
              <input type="text" id="query" placeholder="Search for particular posts..."></input>
            </div>
          </div>

          <div class="result-div">                      
          </div>
          <div class="all-div">

            {% for post in data %}
            <div class="row">         
              <div class="col-md-12 col-sm-12 wow bounceInUp" style="visibility: visible; animation-name: bounceInUp;">
                <div class="elegant-card border-black z-depth-1">
                  {% if post['pic'] %}
                    <div class="col-md-4">
                      <div class="card-up view overlay hm-white-slight">
                        <img class="responsive-img lazy" src="{{ post['pic'] }}">
                      </div>
                    </div>
                    <div class="col-md-8">
                      <div class="card-content">
                        <h5>{{post['source'] }}</h5>
                        <p>{{ post['message'] }}</p>
                      </div>
                    </div>
                  {% else %}
                    <div class="col-md-12">
                      <div class="card-content">
                        <h5>{{post['source'] }}</h5>
                        <p>{{ post['message'] }}</p>
                      </div>
                    </div>
                  {% endif %}
                  <div class="col-md-12">
                    <div class="card-footer">
                      <ul class="list-inline">
                        <li class="left col-md-4"><i class="fa fa-clock-o"></i>Posted on {{ post['real_date'] }} at {{ post['real_time'] }}</li>
                        <li class="right col-md-4 col-md-offset-4"><a href="https://www.facebook.com/{{ post['id'] }}" target="_blank"><i class="fa fa-facebook"></i> View the post</a></li>
                      </ul>
                    </div>
                  </div>
               </div>
              </div>
            </div>
            {% endfor %}
            
          </div>
        </div>
      </div>   
    </body>

    <!-- START INCLUDING JS SCRIPTS -->
    <script type="text/javascript" src="js/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>  
    <script type="text/javascript" src="js/string_score.min.js"></script>
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
    <script type="text/javascript" src="js/mdb.js"></script>
    <script type="text/javascript" src="js/wow.js"></script>
    <script type="text/javascript" src="js/custom.js"></script>
    <!-- END INCLUDING JS SCRIPTS --> 
</html>
